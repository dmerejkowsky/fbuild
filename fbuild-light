#!/usr/bin/env python3.0

import os
import sys
import imp

fbuild_dirname = os.path.dirname(sys.argv[0])

sys.path.extend((
    os.path.join(fbuild_dirname, 'lib'),
    os.path.join(fbuild_dirname, 'external', 'PyYAML', 'lib'),
    '.',
))

f, filename, description = imp.find_module('fbuild',
        [os.path.join(fbuild_dirname, 'bin')])

try:
    fbuild = imp.load_module('fbuild_exe', f, filename, description)
finally:
    f.close()

if __name__ == '__main__':
    sys.exit(fbuild.main())
